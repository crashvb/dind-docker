#!/bin/bash

set -e -o pipefail

# Configure: dind
if [[ ! -e "${EP_RUN}" ]] ; then
	log "Configuring $(basename "${0}") for first run ..."

	# Generate keypairs ...
	generate_rsakey dind

	ln -s /etc/ssl/certs/dindca.crt /usr/share/ca-certificates/
	echo dindca.crt >> /etc/ca-certificates.conf
	update-ca-certificates
fi

